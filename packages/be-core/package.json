{
  "name": "@repo/be-core",
  "version": "0.0.0",
  "description": "",
  "exports": {
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/jest": "^29.5.2",
    "@types/uuid": "^10.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "5.1.3",
    "bcrypt": "^5.1.1"
  },
  "dependencies": {
    "class-validator": "^0.14.1",
    "uuid": "^10.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
