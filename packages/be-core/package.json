{
  "name": "@repo/be-core",
  "version": "0.0.0",
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run build:barrels && tsc",
    "build:barrels": "barrelsby --delete --directory ./src --exclude .*.spec..*",
    "dev": "nodemon --watch src --ext ts --ignore src/index.ts --exec \"npm run build\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.2",
    "@types/uuid": "^10.0.0",
    "barrelsby": "^2.8.1",
    "eslint": "^8.57.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.1.0",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.1",
    "uuid": "^10.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
